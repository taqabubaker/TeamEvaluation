@page
@model TeamEvaluation.Pages.Projects.JudgeModel
@{
    ViewData["Title"] = "Shared";
}

<h1>@Model.Project.Name</h1>

<div class="row">
    @if (!Model.Project.IsLocked)
    {
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Judge.Name" class="control-label"></label>
                <input asp-for="Judge.Name" class="form-control" />
                <span asp-validation-for="Judge.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-page="./index" class="btn btn-link text-info">Cancel</a>
            </div>
        </form>
    </div>
    }
    else
    {
        <div class="col-md-12 text-center alert alert-danger">
            Project is locked, you can not evaluate it.
        </div>
    }
</div>

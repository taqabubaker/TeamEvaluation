@page
@model TeamEvaluation.Pages.Projects.EvaluateModel
@{
    ViewData["Title"] = "Evaluate";
}

<h1>@Model.Project.Name</h1>
<hr />
<h4 class="text-center">Judge Name : @Model.Judge.Name</h4>

<div class="row">
    @if (!Model.Project.IsLocked)
    {
        <table class="table">
            <tr>
                <th>Team Name</th>
            </tr>
            @foreach (var team in Model.Project.Teams)
            {
                <tr><td>
                        <a asp-page="./grades" 
                           asp-route-jid="@Model.Judge.Id" 
                           asp-route-pid="@Model.Project.Id"
                           asp-route-tid="@team.Id">@team.Name</a></td></tr>
            }
        </table>
    }
    else
    {
        <div class="col-md-12 text-center alert alert-danger">
            Project is locked, you can not evaluate it.
        </div>
    }
</div>
@page
@model TeamEvaluation.Pages.Projects.ReportModel
@{
    ViewData["Title"] = "Report";
}

<h1>@Model.Project.Name</h1>

<hr />
<div>
    <div class="row">
        <div class="col-md-12">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Project.TotalGrades)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Project.TotalGrades)

                </dd>
                <dt class="col-md-2">
                    @Html.DisplayNameFor(model => model.Project.Averages)
                </dt>
                <dd class="col-md-10">
                    <div class="row">
                        @foreach (var item in Model.Project.Averages)
                        {
                            <div class="col-md-4">
                                <table class="table">
                                    <tr>
                                        <th>Criteria</th>
                                        <th>Teams</th>
                                    </tr>
                                    <tr>
                                        <td>@item.Key</td>
                                        <td>
                                            <table class="table">
                                                <tr><th>Team</th><th>Avg.</th></tr>
                                                @foreach (var team in item.Value)
                                                {
                                                    <tr>
                                                        <td>@team.Key</td>
                                                        <td>@team.Value</td>
                                                    </tr>
                                                }
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        }
                    </div>
                </dd>
            </dl>
        </div>
    </div>
</div>

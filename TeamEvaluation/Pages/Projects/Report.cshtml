@page
@model TeamEvaluation.Pages.Projects.ReportModel
@{
    ViewData["Title"] = "Report";
}

<h1>@Model.Project.Name</h1>

<hr />
<div>
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Project.JudgesCount)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Project.JudgesCount)

                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Project.Averages)
                </dt>
                <dd class="col-sm-10">
                    <table class="table">
                        <tr>
                            <th>Team</th>
                            <th>Avg.</th>
                        </tr>
                        @foreach (var item in Model.Project.Averages)
                        {
                            <tr>
                                <td>@item.Key</td>
                                <td>@item.Value</td>
                            </tr>
                        }
                    </table>
                </dd>
            </dl>
        </div>
    </div>
</div>

@page
@model TeamEvaluation.Pages.Semesters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Semesters</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Semester[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Semester.OrderByDescending(x => x.Id))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> 
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> 
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    <a asp-page="/projects/create" asp-route-id="@item.Id" class="btn btn-link">Add Project</a>
                </td>
            </tr>
        }
    </tbody>
</table>

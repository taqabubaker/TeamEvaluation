@page
@model TeamEvaluation.Pages.Semesters.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Semester</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Semester.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Semester.Name)
        </dd>
    </dl>
</div>
<br />
<h3>Semester's Projects</h3>
<div class="row">
    @foreach (var project in Model.Semester.Projects.OrderByDescending(x => x.Id))
    {
        <div class="col-md-12">
            <div class="badge badge-primary">@project.Name</div>
            <div class="row">
                @foreach (var team in project.Teams)
                {
                    <div class="col-md-4">
                        <table class="table">
                            <tr>
                                <th>@Html.DisplayNameFor(model => team.Name)</th>
                                <th>@Html.DisplayNameFor(model => team.Members)</th>
                            </tr>
                            <tr>
                                <td>@team.Name</td>
                                <td>@team.Members</td>
                            </tr>
                        </table>
                    </div>
                }
            </div>
        </div>
    }
</div>
<br />
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Semester.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
